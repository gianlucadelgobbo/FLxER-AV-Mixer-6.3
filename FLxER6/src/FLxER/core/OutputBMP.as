package FLxER.core {	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Sprite;	import flash.events.Event;	public class OutputBMP extends Sprite {		private var bd:BitmapData;		private var bm:Bitmap;		public function OutputBMP(ww:uint, hh:uint):void {			bd = new BitmapData(ww, hh,false,0xFF00FF);			bm = new Bitmap(bd);			this.addChild(bm);					this.addEventListener(Event.ENTER_FRAME,bitmapOut);		}		public function bitmapOut(event:Event):void {			bd.draw(Preferences.monitorTrgt);		}		public function resizer():void {			bd = new BitmapData(Preferences.pref.monObj.monWidth,Preferences.pref.monObj.monHeight,false,0xFF00FF);			bm = new Bitmap(bd);			this.addChild(bm);				}	}}