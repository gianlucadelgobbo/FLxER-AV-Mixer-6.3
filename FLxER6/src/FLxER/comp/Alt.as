package FLxER.comp {	import flash.display.Sprite;	import flash.events.*;//	import flash.text.TextField;//	import flash.display.Graphics;	import FLxER.main.Txt;		public class Alt extends Sprite {		private var freccetta:Sprite;		private var lab_i:Txt;		public function Alt():void {			this.x = -500;			//this.alpha = .6;			this.freccetta = new Sprite();			with (freccetta) {				graphics.lineStyle(0,Preferences.pref.myCol.altBrd,1);				graphics.beginFill(Preferences.pref.myCol.altBkg,1);				graphics.moveTo(0,0);				graphics.lineTo(10,0);				graphics.lineTo(10,10);				graphics.lineTo(0,10);				graphics.lineTo(0,0);				x = -5				y = -5				freccetta.rotation = 45;			}			this.addChild(freccetta);			this.lab_i = new Txt(3,0,100,15,"bella", Preferences.th, "puls");			this.lab_i.backgroundColor = Preferences.pref.myCol.altBkg;			this.lab_i.textColor = Preferences.pref.myCol.altCol;			this.lab_i.borderColor = Preferences.pref.myCol.altBrd;			this.addChild(lab_i)			this.mouseChildren = false;		}		public function avvia(myXml:String):void {			//trace(myXml)			stoppa()			this.visible = true;			lab_i.htmlText = "<p>"+myXml+"</p>";			lab_i.width = 200;			lab_i.height = 200;			var w:int = lab_i.textWidth+11;			if (w>200) {				w = 200;			}			lab_i.width = w;			var h:int = lab_i.textHeight;			lab_i.height = h+5;			//posiziona("bella")			this.addEventListener(Event.ENTER_FRAME,posiziona);		}		private function posiziona(event:Event):void {			this.x = parent.mouseX;			this.y = parent.mouseY;			if (x>stage.stageWidth-lab_i.width) {				lab_i.x = -(lab_i.width);				freccetta.x = -8;			} else {				lab_i.x = 0;				freccetta.x = 8;			}			if (y<lab_i.height+11) {				freccetta.y = 0;				lab_i.y = 8;				if (x>stage.stageWidth-lab_i.width) {					lab_i.x = -(lab_i.width);					freccetta.x = -8;				} else {					lab_i.x = 8;					freccetta.x = 14;				}			} else {				freccetta.y = -13;				lab_i.y = -lab_i.height-5;			}		}		public function stoppa():void {			this.removeEventListener(Event.ENTER_FRAME,posiziona);			this.x = -500;		}	}}